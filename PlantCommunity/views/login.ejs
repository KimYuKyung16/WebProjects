  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="styles/main3.css">
  <link rel="stylesheet" href="styles/login.css">
  <title>로그인</title>
  <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@900&family=Source+Sans+Pro:wght@200&display=swap" rel="stylesheet">
  <script src="https://kit.fontawesome.com/e8028249b4.js" crossorigin="anonymous"></script>
</head>
<body>
  <%- include('C:\\Users\\kyk17\\Desktop\\NodejsProject\\PlantServer\\views\\head.ejs') -%>

  <div class="login_list-Div">
    <h2>로그인</h2>
    <hr noshade color="#BDBDBD">
    <div class="login-2">
      <label for="id" class="form_label">아이디</label> 
      <input id="id" class="form_control" name="id" type="text" placeholder="아이디"> <!-- 아이디 입력 부분 -->
    </div>
    <div class="login-2">
      <label for="pw" class="form_label">비밀번호</label>
      <input id="pw" class="form_control" name="pw" type="password" placeholder="비밀번호"> <!-- 비밀번호 입력 부분 -->
    </div>
    <button id="login_confirm_btn" type="submit" class="btn">로그인 하기</button> <!-- 로그인 버튼: 클릭하면 check_login.php로 전송-->
    <button type="submit" id="google_login_confirm_btn" class="btn">구글 로그인 하기</button> <!-- 구글 로그인 버튼 -->
    


    <div class="bottomText"> <!-- 계정이 없다면 회원가입으로 이동하도록 -->
      <p>계정이 없다면 <a href="/signup">Sign up</a><p>
    </div>

  </div>
</body>
<script type="module" src="javascript/login.js"></script>
</html>